<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_grid_margin"
    android:focusable="true"
    android:clickable="true"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    app:rippleColor="@color/ripple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Folder icon container with 16:9 aspect ratio using ConstraintLayout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/iconContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/surface_elevated">

            <!-- Spacer view for 16:9 ratio -->
            <View
                android:id="@+id/ratioSpacer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="16:9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/folderIcon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_folder"
                android:contentDescription="@string/content_description_folder_arrow"
                app:tint="@color/secondary"
                app:layout_constraintTop_toTopOf="@id/ratioSpacer"
                app:layout_constraintBottom_toBottomOf="@id/ratioSpacer"
                app:layout_constraintStart_toStartOf="@id/ratioSpacer"
                app:layout_constraintEnd_toEndOf="@id/ratioSpacer" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Title section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:minHeight="48dp">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="13sp"
                android:fontFamily="sans-serif-medium"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                tools:text="Folder Name" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
