<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme - Modern Dark -->
    <style name="Theme.RVCinemaView" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/text_primary</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        <item name="colorAccent">@color/secondary</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/text_primary</item>

        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- Ripple color -->
        <item name="colorControlHighlight">@color/ripple</item>

        <!-- Widget colors -->
        <item name="android:editTextColor">@color/text_primary</item>
        <item name="editTextColor">@color/text_primary</item>
        <item name="colorControlNormal">@color/text_secondary</item>
        <item name="colorControlActivated">@color/primary</item>

        <!-- Button style -->
        <item name="materialButtonStyle">@style/Widget.RVCinemaView.Button</item>
    </style>

    <!-- Player theme - Fullscreen immersive -->
    <style name="Theme.RVCinemaView.Player" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
    </style>

    <!-- TV Browse theme - Grid-based without Leanback headers -->
    <style name="Theme.RVCinemaView.TvBrowse" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Background -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="colorSecondary">@color/secondary</item>

        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Ripple color -->
        <item name="colorControlHighlight">@color/ripple</item>
    </style>

    <!-- TV Player theme - Leanback based for playback controls -->
    <style name="Theme.RVCinemaView.Leanback" parent="Theme.Leanback">
        <!-- Background -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorBackground">@color/black</item>

        <!-- Brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/secondary</item>

        <!-- Leanback specific brand colors -->
        <item name="defaultBrandColor">@color/primary</item>
        <item name="defaultBrandColorDark">@color/primary_dark</item>
    </style>

    <!-- Custom Button Style -->
    <style name="Widget.RVCinemaView.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_primary</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Widget.RVCinemaView.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/primary_light</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Dialog theme -->
    <style name="Theme.RVCinemaView.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:background">@color/surface</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.RVCinemaView.Dialog.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.RVCinemaView.Dialog.Button</item>
    </style>

    <style name="Widget.RVCinemaView.Dialog.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary</item>
    </style>

</resources>
